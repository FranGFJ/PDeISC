<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zoológico Dinámico</title>
    <link rel="stylesheet" href="/css/style.css">
    
</head>
<body>
    <div class="container">
        <h1>Administración del Zoológico</h1>
        
        <div class="content-wrapper">
            <!-- Formulario para agregar animales -->
            <div class="form-section">
                <h2>Agregar Nuevo Animal</h2>
                <form id="animalForm">
                    <div class="form-group">
                        <label for="nombre">Nombre:</label>
                        <input type="text" id="nombre" name="nombre" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="JaulaNumero">Número de Jaula:</label>
                        <input type="number" id="JaulaNumero" name="JaulaNumero" min="1" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="IdTypeAnimal">Tipo de Animal:</label>
                        <select id="IdTypeAnimal" name="IdTypeAnimal" required>
                            <option value="1">Felino</option>
                            <option value="2">Ave</option>
                            <option value="3">Reptil</option>
                            <option value="4">Otro</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="peso">Peso (kg):</label>
                        <input type="number" step="0.1" id="peso" name="peso" min="0.1" required>
                    </div>
                    
                    <button type="submit">Agregar Animal</button>
                </form>
            </div>
            
            <!-- Resultados y consultas -->
            <div class="results-section">
                <div class="actions-section">
                    <h2>Consultas</h2>
                    <div class="action-buttons">
                        <button id="countJaula5Btn" class="btn">
                            Animales Jaula 5 < 3kg
                        </button>
                        
                        <button id="countFelinosBtn" class="btn">
                            Felinos Jaulas 2-5
                        </button>
                        
                        <button id="animalJaula4Btn" class="btn">
                            Animal Jaula 4 < 120kg
                        </button>
                    </div>
                </div>
                
                <div id="queryResults" class="query-results">
                    <!-- Los resultados de las consultas aparecerán aquí -->
                </div>
                
                <div class="current-animals">
                    <h2>Animales Actuales</h2>
                    <div id="animalsTableContainer">
                        <script>
                            if (animals.length > 0) {
                                document.write(`
                                    <table id="animalsTable">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Nombre</th>
                                                <th>Jaula</th>
                                                <th>Tipo</th>
                                                <th>Peso (kg)</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                `);
                                
                                animals.forEach(animal => {
                                    document.write(`
                                        <tr>
                                            <td>${animal.IdAnimal}</td>
                                            <td>${animal.nombre}</td>
                                            <td>${animal.JaulaNumero}</td>
                                            <td>
                                    `);
                                    
                                    if (animal.IdTypeAnimal === 1) {
                                        document.write('Felino');
                                    } else if (animal.IdTypeAnimal === 2) {
                                        document.write('Ave');
                                    } else if (animal.IdTypeAnimal === 3) {
                                        document.write('Reptil');
                                    } else {
                                        document.write('Otro');
                                    }
                                    
                                    document.write(`
                                            </td>
                                            <td>${animal.peso}</td>
                                        </tr>
                                    `);
                                });
                                
                                document.write(`
                                        </tbody>
                                    </table>
                                `);
                            } else {
                                document.write('<p class="no-animals">No hay animales registrados todavía.</p>');
                            }
                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/script.js"></script>
</body>
</html>